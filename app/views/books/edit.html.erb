<div class = "container">
  <div class = "row">
    <div class = "mx-auto">
      <h1>Editing Book</h1>
      
      <%= form_with model: @book do |f| %>
      <label>Title</label><br />
      <%= f.text_field :title, autofocus: true %><br />
        
      <label>Opinion</label><br />
      <%= f.text_area :body, autofocus: true %><br />
      
      <%= f.submit "Update Book" %>
      <% end %>
      
      <%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %>
    </div>
  </div>
</div>