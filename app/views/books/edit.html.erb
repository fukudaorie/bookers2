<h1>Editing Book</h1>

<% form_with model: @book, url: book_path(@book.id), method: :patch  do |f| %>
<label for="inputTitle">Title</label>
<%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル" %>

<label for="inputOpinion">Opinion</label>
<%= f.text_field :body, autofocus: true, id:"inputOpinion", placeholder:"意見" %><br />

<%= f.submit 'Update Book' %>

<% end %>

<%= link_to "Show", book_path %>|<%= link_to "Back", books_path %>