<div class = "container">
  <div class = "row">
    <div class = "mx-auto">
      <h1>Editing Book</h1>
      
      <%= form_with model: @book, url: '', method: :patch  do |f| %>
      <label for = "book_title">Title</label><br />
      <%= f.text_field :title, autofocus: true, id:"book_title" %><br />
        
      <label for = "book_body">Opinion</label><br />
      <%= f.text_area :body, autofocus: true, id:"book_body" %><br />
      
      <%= f.submit "Update Book" %>
      <% end %>
      
      <%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %>
    </div>
  </div>
</div>