<div class = "container">
  <div class = "row">
    <div class = "col-3">
      <%= render 'users/list', book: @book_new, user: @user %>
    </div>
    <div class = "col-8">
      <h2>Book detail</h2>
      <table class = "table">
        <tbody>
          <tr>
            <td>
              <%= link_to book_path do %>
                <%= image_tag @book.user.get_profile_image(100,100) %><br />
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book.id) %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
              <%= link_to "Edit", edit_book_path(@book.id) %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book), method: :delete %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
