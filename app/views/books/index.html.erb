<h1>Books</h1>
<table class = "table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(current_user.id) do %>
          <%= image_tag book.user.profile_image %>
        <% end %>
      </td>
      <td>
        <%= link_to @book.title, edit_book_path %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
