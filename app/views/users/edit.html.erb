<div class = "container">
  <div class = "row">
    <div class = "col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model: @user do |f| %>
        <div class = "form-group">
          <label for="user_name">Name</label><br />
          <%= f.text_field :name, autofocus: true, id:"user.name", placeholder:"名前"%>
        </div>
        <div class = "form-group">
          <label for="user_image">Image</label><br />
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
        </div>
        <div class = "form-group">
          <label for="user_introduction">Introduction</label><br />
          <%= f.text_area :introduction, autofocus: true, id:"user.introduction" %>
        </div>
        <%= f.submit "Update User" %>
    </div>
  </div>
</div>