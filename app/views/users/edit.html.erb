<div class = "container">
  <div class = "row">
    <div class = "col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        
        <% if @user.errors.any? %>
        <%= @user.errors.count %> error prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>
      
        <%= form_with model: @user do |f| %>
        <div class = "form-group">
          <label>Name</label><br />
          <%= f.text_field :name, autofocus: true, id:"user_name" %>
        </div>
        <div class = "form-group">
          <label>Image</label><br />
          <%= f.file_field :profile_image, accept: "image/*" %>  
        </div>
        <div class = "form-group">
          <label>Introduction</label><br />
          <%= f.text_area :introduction, autofocus: true, id:"user" %>
        </div>
        <%= f.submit "Update User" %>
        <% end %>
    </div>
  </div>
</div>