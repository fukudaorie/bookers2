<div class = "container">
  <div class = "row">
    <div class = "col-3">
      <%= render 'list', book: @book_, user: @user %>
    </div>
    <div class = "col-8">
      <h1>Users</h1>
      <table class = "table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
